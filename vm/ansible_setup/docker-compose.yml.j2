client:
  build: .
  container_name: sensu
  restart: unless-stopped
  command: client
  hostname: {{ ansible_hostname }}
  volumes:
   - /dev:/host_dev/:ro
   - /proc:/host_proc/:ro
   - /sys:/host_sys/:ro
   - ./conf.d:/etc/sensu/conf.d
  environment:
    CLIENT_NAME: {{ ansible_hostname }} 
    CLIENT_ADDRESS: {{ ansible_eth0.ipv4.address }}
    CLIENT_SUBSCRIPTIONS: default
    RABBITMQ_HOST: coreos
    RABBITMQ_PORT: 5672
    HOST_DEV_DIR: /host_dev
    HOST_PROC_DIR: /host_proc
    HOST_SYS_DIR: /host_sys

